(define (domain hospital)
    (:types room - object
            MoveRobot CleanerRobot - robot)
    (:predicates
        (clean ?rm - room)
        (sanitized ?r - robot)
        (prepared ?rm - room)
    )
    (:functions 
        (cleaning-time ?r - robot ?rm - room)
        (moveobject-time ?r1 ?r2 - robot ?rm - room)
    )
    (:capabilities moveobject cleaning sanitize)
    (:rewards time)

    (:task RoomCleaning :parameters (?r - CleanerRobot ?rm - room ?rloc - robotlocation))
    (:method room-cleaning
        :parameters (?r - CleanerRobot ?rm - room ?rloc - robotlocation)
        :task (RoomCleaning ?r ?rm ?rloc)
        :precondition ()
        :subtasks (and
            (clean-room ?r ?rm ?rloc)
        )
    )

    (:action clean-room
        :parameters (?r - CleanerRobot ?rm - room ?rloc - robotlocation)
        :required-capabilities (cleaning)
        :precondition (and
            (at ?r ?rloc)
            (not (clean ?rm))
            (sanitized ?r)
            (hascapability ?r cleaning)
        )
        :effect (and
            (clean ?rm)
            (not (sanitized ?r))
            (rewardchange increase (time) (cleaning-time ?r ?rm))
        )
        :reliability (relClean)
    )

    (:task FurnitureMoving :parameters (?r1 ?r2 - MoveRobot ?rm - room ?r1loc ?r2loc - robotlocation))
    (:method furniture-moving
        :parameters (?r1 ?r2 - Moverobot ?rm - room ?r1loc ?r2loc - robotlocation)
        :task (FurnitureMoving ?r1 ?r2 ?rm ?r1loc ?r2loc)
        :precondition ()
        :subtasks (and
            (move-furniture ?r1 ?r2 ?r1loc ?r2loc ?rm)
        )
    )

    (:action move-furniture
        :parameters (?r1 ?r2 - robot ?r1loc ?r2loc - robotlocation ?rm - room)
        :required-capabilities (moveobject)
        :precondition (and
            (at ?r1 ?r1loc)
            (at ?r2 ?r2loc)
            (hascapability ?r1 moveobject)
            (hascapability ?r2 moveobject)
        )
        :effect (and
            (rewardchange increase (time) (moveobject-time ?r1 ?r2 ?rm))
            (prepared ?rm)
        )
        :reliability (relMove)
    )

    (:task RobotSanitization :parameters (?r - CleanerRobot ?srm - room ?rloc - robotlocation))
    (:method robot-sanitization
        :parameters (?r - CleanerRobot ?srm - room ?rloc - location)
        :task (RobotSanitization ?r ?srm ?rloc)
        :precondition ()
        :subtasks (and
            (sanitize-robot ?r ?srm ?rloc)
        )
    )

    (:action sanitize-robot
        :parameters (?r - CleanerRobot ?srm - room ?rloc - robotlocation)
        :required-capabilities (sanitize)
        :precondition (and
            (at ?r ?rloc)
            (not (sanitized ?r))
            (hascapability ?r sanitize)
        )
        :effect (and
            (sanitized ?r)
        )
        :reliability (relSanitize)
    )
)